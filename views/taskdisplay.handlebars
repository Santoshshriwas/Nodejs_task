 <style>/* General styling */
body {
  font-family: Arial, sans-serif;
  line-height: 1.6;
}

/* Main content styling */
main {
  padding: 1rem;
  margin: 0 auto;
  max-width: 90%;
}

/* Table styling */
table {
  width: 100%;
  border-collapse: collapse;
  margin: 1rem 0;
}

th, td {
  padding: 0.75rem;
  text-align: left;
  border: 1px solid #ddd;
}

thead {
  background-color: #f4f4f4;
}

th {
  font-weight: bold;
}

/* Responsive table design */
@media (max-width: 768px) {
  table {
    display: block;
    overflow-x: auto;
    white-space: nowrap;
  }
  
  thead {
    display: none;
  }

  tr {
    display: block;
    margin-bottom: 0.5rem;
  }

  td {
    display: block;
    text-align: right;
    position: relative;
    padding-left: 50%;
    box-sizing: border-box;
  }

  td::before {
    content: attr(data-label);
    position: absolute;
    left: 0;
    width: 50%;
    padding-left: 0.75rem;
    font-weight: bold;
    white-space: nowrap;
  }
}

/* Styling for empty task list */
p {
  font-size: 1rem;
  color: #666;
}
.TITLE{
  display: flex;
  justify-content: center;
}
</style>
 <main>
    <h1 class="TITLE">{{title}}</h1>
    {{#if tasks.length}}
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Task</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          {{#each tasks}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.name}}</td>
              <td>{{this.task}}</td>
              <td>{{this.status}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{else}}
      <p>No tasks found.</p>
    {{/if}}
  </main>